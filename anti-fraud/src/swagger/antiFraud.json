{
  "openapi": "3.0.1",
  "info": {
    "title": "Ecomm-cpv / API Antifraud",
    "description": "API Antifraud",
    "version": "0.0.1",
    "termsOfService": "https://mockapi.io/docs",
    "contact": {
      "name": "Chat CPV",
      "email": "marcelle.rosa@pagonxt.com"
    },
    "license": {
      "name": "Public license",
      "url": "https://www.gnu.org/licenses/gpl-3.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8002",
      "description": "API Antifraud"
    }
  ],
  "paths": {
    "/antifraud": {
      "get": {
        "tags": [
          "Antifraud"
        ],
        "summary": "List all under analysis",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/analysesSchema"
                }
              }
            }
          },
          "500": {
            "description": "Failed",
            "content": {
              "application/json": {
                "example": "Error"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Antifraud"
        ],
        "summary": "Create a new fraud analysis",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CardAnalyses"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/analysesSchema"
                }
              }
            }
          },
          "500": {
            "description": "Failed",
            "content": {
              "application/json": {
                "example": "Error"
              }
            }
          }
        }
      }
    },
    "/antifraud/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "get": {
        "tags": [
          "Antifraud"
        ],
        "summary": "Detail fraud analysis by ID",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/analysesSchema"
                }
              }
            }
          },
          "404": {
            "description": "Analysis not found",
            "content": {
              "application/json": {
                "example": "ID Not Found"
              }
            }
          },
          "500": {
            "description": "Failed",
            "content": {
              "application/json": {
                "example": "Error"
              }
            }
          }
        }
      }
    },
    "/antifraud/approve/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "post": {
        "tags": [
          "Antifraud"
        ],
        "summary": "Approve fraud analysis status",
        "responses": {
          "204": {
            "description": "Status successfully updated",
            "content": {
              "application/json": {
                "example": "Success"
              }
            }
          },
          "409": {
            "description": "Status can not be changed",
            "content": {
              "application/json": {
                "example": "Conflict"
              }
            }
          },
          "500": {
            "description": "Failed",
            "content": {
              "application/json": {
                "example": "Error"
              }
            }
          }
        }
      }
    },
    "/antifraud/reprove/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "post": {
        "tags": [
          "Antifraud"
        ],
        "summary": "Reprove fraud analysis status",
        "responses": {
          "204": {
            "description": "Status successfully updated",
            "content": {
              "application/json": {
                "example": "Success"
              }
            }
          },
          "409": {
            "description": "Status can not be changed",
            "content": {
              "application/json": {
                "example": "Conflict"
              }
            }
          },
          "500": {
            "description": "Failed",
            "content": {
              "application/json": {
                "example": "Error"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "analysesSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "clientId": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "CardAnalyses": {
        "type": "object",
        "properties": {
          "clientId": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              }
            }
          },
          "transactionId": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
