{
  "openapi": "3.0.3",
  "info": {
    "title": "Transactions",
    "description": "API Transactions",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8003",
      "description": "API Transactions"
    }
  ],
  "paths": {
    "/transactions": {
      "post": {
        "summary": "Insere uma nova transação",
        "responses": {
          "201": {
            "description": "Transação inserida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          }
        }
      }
    },
    "/transactions/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "get": {
        "summary": "Recupera uma transação pelo id",
        "responses": {
          "200": {
            "description": "Transação listada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionById"
                }
              }
            }
          },
          "404": {
            "description": "Transação não encontrada",
            "content": {
              "application/json": {
                "example": "Not Found"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Transaction": {
        "type": "object",
        "properties": {
          "transactionValue": {
            "type": "number"
          },
          "cardHolder": {
            "type": "string"
          },
          "cardNumber": {
            "type": "string"
          },
          "cardExp": {
            "type": "string"
          },
          "cardCvv": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "TransactionById": {
        "type": "object",
        "properties": {
          "transactionId": {
            "type": "string"
          },
          "clientId": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      }
    }
  }
}