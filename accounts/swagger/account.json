{
    "openapi": "3.0.0",
    "info": {
      "title": "Ecomm-cpv / API Accounts",
      "description": "API Accounts",
      "version": "1.0.0",
      "termsOfService": "https://mockapi.io/docs",
      "contact": {
        "name": "chatCPV",
        "email": "rhian.moura@pagonxt.com"
      },
      "license": {
        "name": "Public license",
        "url": "https://www.gnu.org/licenses/gpl-3.0.html"
      }
    },
    "servers": [
      {
        "url": "http://localhost:8001",
        "description": "API Accounts"
      }
    ],
    "paths": {
      "/accounts/cardVerify": {
        "post": {
          "tags": [
            "Accounts"
          ],
          "summary": "List user Id and his month income",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CardValidReq"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Validated card",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/CardValidRes"
                  }
                }
              }
            },
            "400": {
              "description": "Invalid",
              "content": {
                "aplication/json": {
                  "example": "Invalid card number or invalid info!"
                }
              }
            }
          }
        }
      },
      "/accounts/{id}": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true,
            "example": "63caa785ae701b25441ff0be"
          }
        ],
        "get": {
          "tags": [
            "Accounts"
          ],
          "summary": "List an user by his Id",
          "responses": {
            "200": {
              "description": "Sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/AccountId"
                  }
                }
              }
            },
            "404": {
              "description": "Account not found",
              "content": {
                "application/json": {
                  "example": "Id not found"
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "AccountId": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "format": "uuid"
            },
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "cpf": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            },
            "address": {
              "type": "object",
              "properties": {
                "street": {
                  "type": "string"
                },
                "number": {
                  "type": "string"
                },
                "complement": {
                  "type": "string"
                },
                "neighborhood": {
                  "type": "string"
                },
                "zipCode": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "state": {
                  "type": "string"
                }
              }
            },
            "monthIncome": {
              "type": "number"
            }
          }
        },
        "CardValidReq": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "cardNumber": {
              "type": "string"
            },
            "cardExp": {
              "type": "string"
            },
            "cardCvv": {
              "type": "string"
            }
          }
        },
        "CardValidRes": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "format": "uuid"
            },
            "monthIncome": {
              "type": "string"
            }
          }
        }
      }
    }
  }